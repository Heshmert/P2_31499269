<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administración de Contactos</title>
    <link rel="stylesheet" href="../css/list_contactos.css">
</head>
<body>
    <%- include('../partials/header.ejs')%>
    <main>
        <section class="section">
            <div class="container">
                <h2><%= pageTitle %></h2>

                <% if (contacts && contacts.length > 0) { %>
                    <div class="table-responsive"> {/* Wrapper opcional para scroll en móvil */}
                        <table class="contacts-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Email</th>
                                    <th>Comentario</th>
                                    <th>IP</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% contacts.forEach(contact => { %>
                                    <tr>
                                        <td><%= contact.id %></td>
                                        <td><%= contact.name %></td>
                                        <td><%= contact.email %></td>
                                        <td><%= contact.comment %></td>
                                        <td><%= contact.ip_address %></td>
                                        <td><%= contact.created_at %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p>No hay contactos registrados aún.</p>
                <% } %>
            </div>
        </section>
    </main>
    <%- include('../partials/footer.ejs')%>
</body>
</html>